@model List<Guest>
@{
    ViewData["Title"] = "GuestBook";
}

<div class="container-fluid bg-gray text-light py-5">
    <div class="container">
        <h1 class="display-4">Guest Book</h1>
        <h2 class="text-dark">Guest List</h2>
        <ul class="list-group rounded">
            @foreach (var guest in Model)
            {
                @if (!string.IsNullOrEmpty(guest.Name) && !string.IsNullOrEmpty(guest.Message))
                {
                    <li class="list-group-item rounded">
                        <strong>@guest.Name:</strong> @guest.Message
                    </li>
                }
            }
        </ul>

        <h2 class="text-dark">Add a New Guest</h2>
        <form asp-action="AddGuest" method="post" class="rounded p-3 bg-light">
            <div class="form-group">
                <label for="name" class="text-dark">Name:</label>
                <input type="text" id="name" name="name" class="form-control" />
            </div>
            <div class="form-group">
                <label for="message" class="text-dark">Message:</label>
                <textarea id="message" name="message" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>